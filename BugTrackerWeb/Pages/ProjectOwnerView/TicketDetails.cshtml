@page
@model BugTrackerWeb.Pages.ProjectOwnerView.TicketDetailsModel
@{

    //This one works
    <label asp-for="AssignedTicket.TicketCategory"></label>
    <select asp-for="AssignedTicket.TicketCategory" asp-items=@Model.TicketCatDDLOptions>
    </select>
    <select asp-for="AssignedTicket.TicketCategory" asp-items=@Model.QAsList>
    </select>

    if (Model.Ticket != null)
    {

        <h2>@Model.Ticket.Title</h2>
        <label><b>Description</b></label>
        <br />
        <tr>@Model.Ticket.Description</tr>
        <br />
        <label><b>Author</b></label>
        <br />
        <tr>@Model.Ticket.Author</tr>
        <br />
        <label><b>Date</b></label>
        <tr>@Model.Ticket.Date</tr>
        <br />
        <label><b>Type</b></label>
        <tr>@Model.Ticket.GetType()</tr>
        <br />
        //Need to be hidden
        <p id="ticketId" style="display:none">@Model.Ticket.Id</p>

    }

    if (Model.AvailableQAs != null)
    {
        <table id="qas" class="table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.AvailableQAs.Count; i++)
                {
                    <tr class="clickable-row">
                        <th scope="row">@(i+1)</th>
                        <td class="qaName">@Model.AvailableQAs.ElementAt(i).Name</td>
                        <td id="qaId" style="display:none">@Model.AvailableQAs.ElementAt(i).Id</td>
                    </tr>

                }
            </tbody>
        </table>
        <br />
        <form method="post">
            <input id="assignticket" type="submit" class="btn btn-success text-white" value="Assign" />
        </form>
    }

    @*FORM SECTION STARTER HERE *@
    <h3 class="text-info">Assign with details</h3>
    <div class=".container-sm" style="padding:30px;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AssignedTicket.Title" class="control-label"></label>
                <input asp-for="AssignedTicket.Title" class="form-control" value="@Model.Ticket.Title">
            </div>

            <div class="form-group">
                <label asp-for="AssignedTicket.Description" class="control-label"></label>
                <input asp-for="AssignedTicket.Description" class="form-control" value="@Model.Ticket.Description">
            </div>

            <div class="form-group">
                <label asp-for="AssignedTicket.TicketCategory" class="control-label"></label>
                <select asp-for="AssignedTicket.TicketCategory" class="form-control" asp-items="@Model.TicketCatDDLOptions"></select>
            </div>

            <div class="form-group">
                <label asp-for="AssignedTicket.TicketPriority" class="control-label"></label>
                <select asp-for="AssignedTicket.TicketPriority" class="form-control" asp-items="@Model.TicketPriorDDLOptions"></select>
            </div>

            <div class="form-group">
                <label asp-for="AssignedTicket.TicketStatus" class="control-label"></label>
                <select asp-for="AssignedTicket.TicketStatus" class="form-control" asp-items="@Model.TicketStatDDLOptions"></select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.QAsList" class="control-label"></label>
                <select asp-for="@Model.AssignedTicket.QaID" class="form-control" asp-items="@Model.QAsList"></select>
            </div>

            <div class="form-group">
                <input asp-page-handler="AssignTicketFromForm" type="submit" value="AssignTicket" class="btn btn-secondary text-white" />
            </div>
        </form>
    </div>
    //TicketPriority
    //TicketStatus
    @*FORM SECTION ENDED HERE *@

}


@section Scripts{
    <script src="~/js/poTicketDetails.js"></script>
}


