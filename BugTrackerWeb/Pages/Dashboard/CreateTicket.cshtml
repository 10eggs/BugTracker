@page
@model BugTrackerWeb.Pages.Dashboard.CreateTicketModel
@{
}
<br />
<h2 class="text-info">Create New Request</h2>
<div class="border container" style="padding:30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NewRequest.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="NewRequest.Title" class="form-control" />
            </div>
            <span asp-validation-for="NewRequest.Title" class="text-danger field-validation-valid">Required</span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NewRequest.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="NewRequest.Description" class="form-control" />
            </div>
            <span asp-validation-for="NewRequest.Description" class="text-danger field-validation-valid">Required</span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NewRequest.ProjectId">Project name</label>
            </div>
            <div class="col-6">
                <select asp-for="NewRequest.ProjectId" class="form-control" asp-items="@Model.ProjectListDDL"></select>
            </div>
            <div>
                <span asp-validation-for="ProjectId" class="text-danger field-validation-valid">Project ID required</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-for="Index" class="btn btn-success form-control">Back to the dashboard</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
  }
