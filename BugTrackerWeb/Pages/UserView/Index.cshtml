@page
@model BugTrackerWeb.Pages.UserView.IndexModel
@{

    <h1>Dashboard</h1>
    <br />
    <div class="container row p-0 m0">
        <div class="col-6">
            <h2 class="text-info">My requests</h2>
        </div>
        <div class="col-3">
            <a asp-page="CreateRequest" class="btn btn-info form-control">Create New Request</a>
        </div>
        <div class="col-3">
            <a asp-page="UpsertRequest" class="btn btn-info form-control">Add(Upsert) New Request</a>
        </div>


        <div class="col-12 border p-3">

            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Project name</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="col-6">
        <h2 class="text-info">Requests in process</h2>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Tickets.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Tickets.FirstOrDefault().Title"></label>
                        </th>
                        <th>
                            <label asp-for="Tickets.FirstOrDefault().Description"></label>
                        </th>
                        <th>
                            <label asp-for="Tickets.FirstOrDefault().TicketStatus"></label>
                        </th>
                        <th>
                            <label asp-for="Tickets.FirstOrDefault().Date"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Tickets)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TicketStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Date)
                            </td>
                            <td>
                                <a asp-page="TicketDetails" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Details</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>You don't have any tickets in processing</p>
            }
        </form>
    </div>
    @section Scripts{
        <script src="~/js/reqListUserView.js"></script>

    }

}