@page
@model BugTrackerWeb.Pages.UserView.NewRequestModel
@{
}
<br />
<h2 class="text-info">Create New Request</h2>
<div class="border container" style="padding:30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NewRequest.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="NewRequest.Title" class="form-control" />
            </div>
            <span asp-validation-for="NewRequest.Title" class="text-danger field-validation-valid">Required</span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NewRequest.ProjectId">Project name</label>
            </div>
            <div class="col-6">
                @*<select asp-for="NewRequest.ProjectId" class="form-control" asp-items="@Model.ProjectListDDL"></select>*@
                <select asp-for="NewRequest.ProjectId" class="form-control" asp-items="@new SelectList(Model.TestDDL,nameof(TestDDLOption.Id),nameof(TestDDLOption.Name))"></select>
            </div>
            <div>
                <span asp-validation-for="NewRequest.ProjectId" class="text-danger field-validation-valid">Project ID required</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button asp-page-handler="SaveRequest" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to the dashboard</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}