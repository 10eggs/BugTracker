@page
@model BugTrackerWeb.Pages.UserView.EditTicketModel
@{

    <br />
    <h2 class="text-info">Update ticket</h2>
    <div class="border container" style="padding:30px;">
        <form method="post">
            <input type="hidden" asp-for="EditedRequest.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditedRequest.Title"></label>
                </div>
                <div class="col-6">
                    <input asp-for="EditedRequest.Title" class="form-control" />
                </div>
                <span asp-validation-for="EditedRequest.Title" class="text-danger field-validation-valid">Required</span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditedRequest.Description"></label>
                </div>
                <div class="col-6">
                    <input asp-for="EditedRequest.Description" class="form-control" />
                </div>
                <span asp-validation-for="EditedRequest.Description" class="text-danger field-validation-valid">Required</span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditedRequest.ProjectId">Project name</label>
                </div>
                <div class="col-6">
                    <select asp-for="EditedRequest.ProjectId" class="form-control" asp-items="@Model.ProjectListDDL"></select>
                </div>
                <div>
                    <span asp-validation-for="EditedRequest" class="text-danger field-validation-valid">Project ID required</span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-4">
                    <input type="submit" value="Update" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-for="Index" class="btn btn-success form-control">Back to the dashboard</a>
                </div>
            </div>
        </form>
    </div>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
}