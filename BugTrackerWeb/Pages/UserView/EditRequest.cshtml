@page
@model BugTrackerWeb.Pages.UserView.EditTicketModel
@{

    <br />
    <h2 class="text-info">Update ticket</h2>
    <div class="border container" style="padding:30px;">
        <form method="post">
            <input type="hidden" asp-for="@Model.EditRequestItemCommand.Id" value="@Model.EditRequestItemVm.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Title start-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditRequestItemCommand.Title"></label>
                </div>
                <div class="col-6">
                    <input asp-for="EditRequestItemCommand.Title" class="form-control" />
                </div>
            </div>
            <!--Title end-->
            <!--StepToReproduce start-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditRequestItemCommand.StepsToReproduce"></label>
                </div>
                <div class="col-6">
                    <input asp-for="EditRequestItemCommand.StepsToReproduce" class="form-control" />
                </div>
            </div>
            <!--StepToReproduce end-->
            <!--ExpectedResult start-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditRequestItemCommand.ExpectedResult"></label>
                </div>
                <div class="col-6">
                    <input asp-for="EditRequestItemCommand.ExpectedResult" class="form-control" />
                </div>
            </div>
            <!--ExpectedResult end-->
            <!--ActualResult start-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditRequestItemCommand.ActualResult"></label>
                </div>
                <div class="col-6">
                    <input asp-for="EditRequestItemCommand.ActualResult" class="form-control" />
                </div>
            </div>
            <!--ActualResult end-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EditRequestItemCommand.ProjectId">Project name</label>
                </div>
                <div class="col-6">
                    <select asp-for="EditRequestItemCommand.ProjectId" class="form-control" asp-items='@new SelectList(Model.EditRequestItemVm.AvailableProjects,"Key","Value")'></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-4">
                    <input type="submit" value="Update" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-for="Index" class="btn btn-success form-control">Back to the dashboard</a>
                </div>
            </div>
        </form>
    </div>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
}